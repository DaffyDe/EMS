@{
    Layout = null;
    ViewData["Title"] = "EduConnect";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>EduConnect</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- ✅ REUSABLE NAVBAR COMPONENT -->
    @await Html.PartialAsync("_NavBar")

    <!-- Landing Page Content -->
    <div class="landing-container">
        

        <!-- Hero Section -->
        <section class="hero">
            <h1>
                Connecting Teachers,<br />
                Students, and Parents<br />
                for Better Education
            </h1>

            <p>
                A modern education management system built to bring all stakeholders together.
                Manage classes, track attendance, and share results in real-time.
            </p>

            <div class="hero-buttons">
                <a href="/Account/Login" class="btn primary">Get Start</a>
                <a href="#" class="btn secondary">Parent View</a>
            </div>
        </section>

        <!-- Features -->
        <section class="features">
            <div class="feature-card">
                <div class="icon">👥</div>
                <h3>Manage Classes</h3>
                <p>Organize students by grade and class with ease.</p>
            </div>

            <div class="feature-card">
                <div class="icon">📊</div>
                <h3>Track Attendance</h3>
                <p>Monitor attendance and send updates to parents.</p>
            </div>

            <div class="feature-card">
                <div class="icon">📘</div>
                <h3>Share Results</h3>
                <p>Publish exam results and announcements instantly.</p>
            </div>
        </section>

    </div>

</body>
</html>
