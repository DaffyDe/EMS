@model EMS.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<h2>Edit Class</h2>

<form asp-controller="Class" asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Grade</label>
        <input type="text" name="grade" class="form-control" value="@Model.Grade" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input type="text" name="place" class="form-control" value="@Model.Place" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-controller="Teacher" asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
