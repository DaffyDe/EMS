@model EMS.Models.Class
@{
    ViewData["Title"] = "Create Class";
}

<h2>Create New Class</h2>

<form asp-controller="Class" asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Grade</label>
        <input type="text" name="grade" class="form-control" placeholder="Enter grade" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Location</label>
        <input type="text" name="place" class="form-control" placeholder="Enter location" required />
    </div>
    <button type="submit" class="btn btn-success">Create Class</button>
    <a asp-controller="Class" asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
