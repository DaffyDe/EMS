@model EMS.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}

<h2>Delete Class</h2>

<div class="alert alert-danger">
    Are you sure you want to delete class <strong>Grade @Model.Grade</strong> at <strong>@Model.Place</strong>?
</div>

<form asp-controller="Class" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-controller="Teacher" asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
